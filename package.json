{
  "name": "eznotes",
  "displayName": "ezNotes",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "eznotes.openDailyNote",
        "when": "workspaceFolderCount > 0",
        "title": "Open Daily Note"
      }
    ],
    "keybindings": [
      {
        "command": "eznotes.openDailyNote",
        "when": "workspaceFolderCount > 0",
        "key": "alt+d"
      }
    ],
    "configuration": {
      "title": "ezNotes Configuration",
      "type": "object",
      "properties": {
        "ezNotes.dailyNotesPath": {
          "type": "string",
          "default": "notes/{yyyy}/{MM}/{dd}.md",
          "description": "Set Daily Notes Path",
          "markdownDescription": "Use `{yyyy}` for year, `{MM}` for month, `{dd}` for day amd `{quarter}` for quarter."
        },
        "ezNotes.templatePath": {
          "type": "string",
          "default": ".ezNotes",
          "description": "Template folder path for new notes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "typescript-eslint": "^8.47.0",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}